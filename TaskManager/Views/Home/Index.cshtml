<div id="content">
    <div class="service-container">
        <div class="service">
            <div class="icon" aria-hidden="true"><i class="fas fa-tasks"></i></div>
            <div class="text-content">
                <h3 class="title">Мои задачи</h3>
                <p class="description">Просмотр и управление текущими задачами</p>
            </div>
            <button class="app-button action-btn" id="current-task-button" aria-label="Перейти к моим задачам">
                <i class="fas fa-arrow-right"></i>
            </button>
        </div>

        <div class="service">
            <div class="icon" aria-hidden="true"><i class="fas fa-plus-circle"></i></div>
            <div class="text-content">
                <h3 class="title">Добавить задачу</h3>
                <p class="description">Создание новой задачи в список</p>
            </div>
            <button class="app-button action-btn" id="new-task-button" aria-label="Добавить новую задачу">
                <i class="fas fa-arrow-right"></i>
            </button>
        </div>

        <div class="service">
            <div class="icon" aria-hidden="true"><i class="fas fa-archive"></i></div>
            <div class="text-content">
                <h3 class="title">Архив задач</h3>
                <p class="description">Просмотр завершенных задач</p>
            </div>
            <button class="action-btn app-button" id="closed-task-button" aria-label="Перейти к архиву задач">
                <i class="fas fa-arrow-right"></i>
            </button>
        </div>
    </div>
</div>

<div id="mainMenu" cass="main-menu">
    <button id="mainMenuBtn" class="app-button btn-menu">
        <i class="fas fa-bars"></i>
    </button>
</div>

<div id="dropdownMainMenu" class="dropdown-main-menu hidden">
    <ul>
        <li><a href="#" class="menu-item"><i class="fas fa-user"></i> Профиль</a></li>
        <li><a href="#" class="menu-item"><i class="fas fa-cog"></i> Настройки</a></li>
        <li><a href="#" class="menu-item"><i class="fas fa-question-circle"></i> Помощь</a></li>
        <li><a href="#" class="menu-item"><i class="fas fa-info-circle"></i> О программе</a></li>
        <li class="menu-divider"></li>
        <li>
            <form asp-controller="Account" asp-action="LogOut" method="post">
                <button type="submit" class="logout-button menu-item">
                    <i class="fas fa-sign-out-alt"></i> Выйти
                </button>
            </form>
        </li>
    </ul>
</div>

<div id="taskModal" class="modal-wrapper">
    <div class="modal-container">
        <div class="service modal-service">
            <div class="icon" aria-hidden="true"><i class="fas fa-plus-circle"></i></div>
            <div class="text-content">
                <h3 class="title">Добавить новую задачу</h3>
                <div class="modal-inputs">
                    <label class="input-label" for="taskTitle">Описание задачи</label>
                    <input type="text" id="taskTitle" class="modal-input" placeholder="Введите краткое описание"/>
                    <label class="input-label" for="taskInput">Текст задачи</label>
                    <textarea id="taskInput" class="modal-textarea" placeholder="Введите подробное описание задачи"></textarea>
                </div>
                <div class="modal-actions">
                    <button id="cancelBtn" class="app-button btn-cancel" aria-label="Отменить">
                        <i class="fas fa-times"></i>
                    </button>
                    <button id="submitBtn" class="app-button btn-submit" aria-label="Подтвердить">
                        <i class="fas fa-check"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="toastNotification" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <strong class="me-auto" id="toastTitle">Уведомление</strong>
        <button type="button" class="btn-close" data-dismiss="toast" aria-label="Закрыть"></button>
    </div>
    <div class="toast-body" id="toastMessage"></div>
</div>