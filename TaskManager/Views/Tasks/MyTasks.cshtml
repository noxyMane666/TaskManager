@using TaskManager.DTO
@model IEnumerable<TaskItemDto>

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>Менеджер задач</title>
    <link href="~/css/tasksGrid.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div id="gridContent">
        <div class="grid-container">
            @foreach (var task in Model)
            {
                <div class="task" id="task-@task.Id">
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="text-content">
                        <h3 class="title">@task.TaskTitle</h3>
                        <div class="task-text" style="display: none">
                            <textarea class="text">"@task.TaskDescription"</textarea>
                        </div>
                    </div>
                    <div class="task-status">
                        <label class="switch">
                            <input type="checkbox"
                                   data-task-id="@task.Id"
                                   class="status-toggle"
                            @(task.IsClosed ? "checked" : "") />
                            <span class="slider round"></span>
                        </label>
                        <span>@(task.IsClosed ? "Завершена" : "Активна")</span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="modal-overlay" id="taskModal" style="display: none;">
        <div class="modal-container">
            <div class="modal-header">
                <h3 class="modal-title">Детали задачи</h3>
                <button class="modal-close">&times;</button>
            </div>
            <div class="modal-body">
                <div class="modal-task-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="modal-content"></div>
            </div>
        </div>
    </div>
    <script src="~/js/grid.js" asp-append-version="true"></script>
</body>
</html>